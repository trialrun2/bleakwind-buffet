<UserControl x:Class="PointOfSale.MenuWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Margin ="20" Click="DrinkButton" Grid.Row="0" FontSize="50" FontWeight="Bold">Drinks</Button>
        <Button Margin ="20" Click="EntreeButton" Grid.Row="1" FontSize="50" FontWeight="Bold">Entrees</Button>
        <Button Margin ="20" Click="SideButton" Grid.Row="2" FontSize="50" FontWeight="Bold">Sides</Button>
    </Grid>
</UserControl>
