<UserControl x:Class="PointOfSale.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    <DockPanel Grid.Column="1">
        <TextBlock DockPanel.Dock ="Top" TextAlignment="Center" FontWeight="Bold" FontSize="20">Order For:</TextBlock>
            <TextBox Margin="20,0" DockPanel.Dock="Top" FontWeight ="Bold" TextAlignment ="Center" FontSize="20"/>
            <Grid DockPanel.Dock="Bottom" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Button Margin="10" Click ="PriorOrder" Grid.Row="1" Name="priorButton">
                &lt; Prior
            </Button>
            <Button Margin="10" Click ="AddNewOrder" Grid.Row="1" Grid.Column="1">
                Add Order
            </Button>
            <Button Margin="10" Click ="NextOrder" Grid.Column="2" Grid.Row="1" Name ="nextButton">
                Next &gt;
            </Button>
        </Grid>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Center" FontWeight="Bold" FontSize="20">Total: </TextBlock>
        <TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" FontWeight="Bold" FontSize="15"> Tax: </TextBlock>
        <TextBlock DockPanel.Dock ="Bottom" TextAlignment="Center" FontWeight="Bold" FontSize="15">Subtotal:</TextBlock>
        <ListView Margin="20, 0" Name= "listView"/>
    </DockPanel>
        <Border Name="menuItems" Margin="30">
            <local:MenuWindow></local:MenuWindow>
        </Border>
    </Grid>
</UserControl>
